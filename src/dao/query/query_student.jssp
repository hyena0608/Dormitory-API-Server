query insertStudent(studentHakbun Long, studentSex TypeID, studentName Name, studentAge Age) Long {

    INSERT INTO
        student
        (
            student_hakbun,
            student_sex,
            student_name,
            student_age
        )
    VALUES
        (
            :studentHakbun,
            :studentSex,
            :studentName,
            :studentAge
        )

}

query updateStudent(studentId Long, studentHakbun Long, studentSex TypeID, studentName Name, studentAge Age) Long {

    UPDATE
        student
    SET
        student_update_dt = CURRENT_TIMESTAMP
]]>
        <if test='studentSex != null and studentSex != "0"'>
            , student_sex = :studentSex
        </if>
        <if test='studentName != null and studentName != "0"'>
            , student_name = :studentName
        </if>
        <if test='studentAge != null and studentAge != "0"'>
            , student_age = :studentAge
        </if>
    WHERE
        1 = 1
        <if test='studentId != null and studentId != "0"'> 
            AND student_id = :studentId
        </if>
        <if test='studentHakbun != null and studentHakbun != "0"'>
            AND student_hakbun = :studentHakbun
        </if>
